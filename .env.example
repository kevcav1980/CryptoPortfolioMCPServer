# Binance API Credentials
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Coinbase API Credentials
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# Kraken API Credentials
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Optional: Enable specific exchanges (comma-separated: binance,coinbase,kraken)
# Leave empty to enable all exchanges with valid credentials
ENABLED_EXCHANGES=

# Optional: Enable mock mode for testing without real API keys
MOCK_MODE=false

# Optional: Cache duration in seconds
PRICE_CACHE_DURATION=30
BALANCE_CACHE_DURATION=60
